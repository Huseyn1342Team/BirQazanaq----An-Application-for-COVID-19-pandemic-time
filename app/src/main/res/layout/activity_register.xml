<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/registerback"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:text="Qeydiyyat"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:drawableLeft="@drawable/nameandsurname"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:hint="Ad və soyad"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@id/title"
        android:id="@+id/namesurname"/>
    <EditText
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/age_img"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/age"
        android:background="@drawable/custom_edittext"
        android:hint="Sizin yaşınız"
        android:layout_below="@id/namesurname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/age"
        android:background="@drawable/custom_edittext"
        android:layout_marginTop="20dp"
        android:hint="Sizin elektron adresiniz"
        android:id="@+id/email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Boyunuz"
        android:inputType="numberDecimal"
        android:drawableLeft="@drawable/uzun"
        android:drawablePadding="10dp"
        android:id="@+id/boyun"
        android:background="@drawable/custom_edittext"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/boyun"
        android:layout_marginTop="20dp"
        android:id="@+id/ceki"
        android:inputType="numberDecimal"
        android:drawableLeft="@drawable/weight"
        android:drawablePadding="10dp"
        android:background="@drawable/custom_edittext"
        android:hint="Çəkiniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_below="@id/ceki"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:id="@+id/sifre"
        android:background="@drawable/custom_edittext"
        android:hint="Sizin şifrəniz"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/sifre"
        android:layout_marginTop="20dp"
        android:id="@+id/cins"
        android:background="@drawable/custom_edittext"/>
    <Button
        android:text="Qeydiyyatdan keç"
        android:textColor="@android:color/white"
        android:layout_marginTop="25dp"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_button"
        android:layout_below="@id/cins"
        android:layout_centerHorizontal="true"
        android:id="@+id/submit"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>